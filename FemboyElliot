local player = game:GetService("Players").LocalPlayer
local character = player.Character
if not character then return end

-- Remove existing clothing
for _, v in pairs(character:GetChildren()) do
	if v:IsA("Shirt") or v:IsA("Pants") then
		v:Destroy()
	end
end

-- Apply new clothing
local shirt = Instance.new("Shirt")
shirt.ShirtTemplate = "http://www.roblox.com/asset/?id=13875932275" -- Shirt from the original script
shirt.Parent = character

local pants = Instance.new("Pants")
pants.PantsTemplate = "http://www.roblox.com/asset/?id=YOUR_PANTS_ID" -- Change to desired pants
pants.Parent = character

-- Apply meshes to legs (instead of replacing them)
local function applyMesh(part, meshId, scale)
	local mesh = Instance.new("SpecialMesh")
	mesh.MeshId = meshId
	mesh.Scale = scale
	mesh.Parent = part
end

applyMesh(character["Left Leg"], "rbxassetid://6117150491", Vector3.new(1, 1, 1))
applyMesh(character["Right Leg"], "rbxassetid://6117150491", Vector3.new(1, 1, 1))

-- Create socks
local function createSock(name, meshId, position, parentPart)
	local sock = Instance.new("MeshPart")
	sock.Name = name
	sock.MeshId = meshId
	sock.Size = Vector3.new(1.15, 1.625, 1.056)
	sock.Color = Color3.fromRGB(20, 20, 20)
	sock.Material = Enum.Material.SmoothPlastic
	sock.CanCollide = false
	sock.Anchored = false
	sock.Parent = character

	local weld = Instance.new("Weld")
	weld.Part0 = parentPart
	weld.Part1 = sock
	weld.C0 = CFrame.new(position)
	weld.Parent = sock
end

createSock("Left Sock", "rbxassetid://6117189053", Vector3.new(0, -0.2, 0), character["Left Leg"])
createSock("Right Sock", "rbxassetid://6117189053", Vector3.new(0, -0.2, 0), character["Right Leg"])

-- Function to create accessories
local function createAccessory(name, meshId, textureId, parentPart, cframe)
	local accessory = Instance.new("Accessory")
	local handle = Instance.new("Part")
	local mesh = Instance.new("SpecialMesh")
	local attach = Instance.new("Attachment")
	local weld = Instance.new("Weld")

	accessory.Name = name
	handle.Name = "Handle"
	handle.Size = Vector3.new(1, 1, 1)
	handle.CanCollide = false
	handle.Parent = accessory

	mesh.Parent = handle
	mesh.MeshId = meshId
	mesh.TextureId = textureId
	mesh.Scale = Vector3.new(1, 1, 1)

	attach.Name = name .. "Attachment"
	attach.CFrame = cframe
	attach.Parent = handle

	weld.Parent = handle
	weld.Part0 = parentPart
	weld.Part1 = handle
	weld.C0 = CFrame.new(0, 0, 0)
	weld.C1 = cframe

	accessory.Parent = character
end

-- Add all accessories including HairTuftFluffy
createAccessory("HairTuft", "rbxassetid://8691838271", "rbxassetid://8757308595", character.Head, CFrame.new(0, 0.6, 0))
createAccessory("Visor", "http://www.roblox.com/asset/?id=1081088", "rbxassetid://2646470932", character.Head, CFrame.new(0, 0.6, 0))
createAccessory("HairTuftFluffy", "rbxassetid://14100814964", "rbxassetid://14136497066", character.Head, CFrame.new(0.5, 0.2, -0.4))

